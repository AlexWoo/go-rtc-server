#!/bin/bash

# Copyright (C) AlexWoo(Wu Jie) wj19840501@gmail.com


. auto/options

case ".$RTCPATH" in
    .)  RTCPATH=/usr/local/gortc    ;;
    .!) RTCPATH=./                  ;;
    *)                              ;;
esac

if [ ! -f src/gortc/gortc ];then
    mv src/gortc/gortc.go src/gortc/gortc
fi
sed "s#rtcpath = \"/usr/local/gortc\"#rtcpath = \"$RTCPATH\"#" src/gortc/gortc > src/gortc/gortc.go

DEPENDENCE=`cat auto/dependence`

. auto/install
