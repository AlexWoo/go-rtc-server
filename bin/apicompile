if [ $# -ne 1 ];then
    echo "Usage: $1 plugin_name"
    exit 1
fi

rtcpath=/usr/local/gortc

CURDIR=`pwd`
OLDGOPATH="$GOPATH"
export GOPATH="$CURDIR"

files=`ls $1 |grep -P "^v\d+\.go$"`
for file in $files;do
    ver=`echo $file |awk -F '.' '{print $1}'`
    api=$1.$ver
    echo "apicompile $rtcpath/api/$api.so $1/$ver.go"
    go build -x -ldflags "-pluginpath=$1_$ver" -buildmode=plugin -o $rtcpath/api/$api.so $1/$ver.go
done


export GOPATH="$OLDGOPATH"
